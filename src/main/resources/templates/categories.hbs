{{#partial "main"}}

    <form class="addNewCategoryForm" action="/add-new-category" method="post">
        <button type="button" class="btn btn-secondary addNewCategoryButton">Add Category</button>
        <input type="text" name="addNewCategory" value="" class="inputAddNewCategory" placeholder="enter category name">
    </form>

    <ul class="list-group categoriesList">
        <li class="list-group-item d-flex justify-content-start align-items-center">
            <a href="#">category 1</a>
            <div class="categoryDetails">
                <span class="badge badge-primary badge-pill">14</span>
                <div class="btn-group" role="group" aria-label="Basic example">

                    <form class="categoryDetailsButtons" action="/delete-category" method="post">
                        <button type="submit" class="btn btn-secondary">Delete Category</button>
                        <button type="button" class="btn btn-secondary renameCategoryButton">Rename Category</button>
                    </form>


                    <form class="renameCategoryForm" action="/rename-category" method="post">
                        <input type="text" name="renameCategory" value="" class="inputRenameCategory" placeholder="enter new category name">
                    </form>

                </div>
            </div>

        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="#"> category 2</a>
            <span class="badge badge-primary badge-pill">2</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="#"> category 3</a>
            <span class="badge badge-primary badge-pill">1</span>
        </li>
    </ul>
{{/partial}}

